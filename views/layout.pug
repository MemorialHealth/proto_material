        style.
            .clear {
                clear:both;
            }
            .layout-nav li
            {
                float:left;
                clear:both;
                line-height:40px;
            }
            .layout-nav li a
            {
                color:#696969;
            }

            .layout-nav li i
            {
                float: left;
                line-height: 40px;
                margin: 0 32px 0 0;
                width: 24px;
                color:#696969;
            }
            .no-pad { padding: 0 !important; }
            .story-box
            {
                overflow:hidden;
            }

            @media only screen and (min-width: 601px)
            {
                 .story-box
                {
                    max-height:100px;
                }
            }
            @media only screen and (min-width: 993px)
            {
                 .story-box
                {
                    max-height:250px;
                }
            }
           
