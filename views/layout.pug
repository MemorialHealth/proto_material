html
    head
        title= title
        link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet", href="css/materialize/materialize.min.css")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        style.
            .clear {
                clear:both;
            }
            .layout-nav li
            {
                float:left;
                clear:both;
                line-height:40px;
                width:100%;
            }
            .layout-nav li:hover
            {
                background-color: whitesmoke;
            }
            
            .layout-nav li a
            {
                color:#696969;
            }

            .layout-nav li i
            {
                float: left;
                line-height: 40px;
                margin: 0 32px 0 0;
                width: 24px;
                color:#696969;
            }
            .no-pad { padding: 0 !important; }
            .story-box
            {
                overflow:hidden;
            }

            ul.list-inline li
            {
                display:inline-block;
                padding:0 5px;
            }
            ul.secondary-nav
            {
                padding-bottom: 5px;
            }
            ul.secondary-nav li
            {
                padding: 0 10px;
            }
            ul.secondary-nav li.active
            {
                border-bottom: 2px solid white;
            }

            @media only screen and (min-width: 601px)
            {
                 .story-box
                {
                    max-height:100px;
                }
            }
            @media only screen and (min-width: 993px)
            {
                 .story-box
                {
                    max-height:250px;
                }
            }

            .bg-blue{
                background-color:#29b6f6;
            }
           
    body
        nav.light-blue.lighten-1(role="navigation")
            div.nav-wrapper.container
                a.brand-logo(id="logo-container", href="/") Memorial Health
                ul.right
                    li
                        a(href="#")
                            i.material-icons perm_phone_msg
                ul.side-nav#nav-mobile(style="transform: translateX(-100%);")
                    li.clear
                        a(href="#") Find Doctor
                            i.material-icons person_pin
                    li.clear
                        a(href="#") Services
                            i.material-icons work
                    li.clear
                        a(href="#") Locations
                            i.material-icons location_on
                    li.clear
                        a(href="#") ER Times
                            i.material-icons alarm_on
                    li.clear
                        a(href="#") Contact
                            i.material-icons phone
                    li.clear
                        a(href="company") Company
                            i.material-icons business
                    li.clear
                        a(href="#") Give
                            i.material-icons.red-text.lighten-1 loyalty

                a.button-collapse(href="#", data-activates="nav-mobile")
                    i.material-icons menu
        block subheader

        div
            div.row
                div.col.s2.hide-on-med-and-down
                    ul.layout-nav
                        li
                            a(href="#") Find Doctor
                                i.material-icons person_pin
                        li
                            a(href="#") Services
                                i.material-icons work
                        li
                            a(href="#") Locations
                                i.material-icons location_on
                        li
                            a(href="#") ER Times
                                i.material-icons alarm_on
                        li
                            a(href="#") Contact
                                i.material-icons phone
                        li
                            a(href="company") Company
                                i.material-icons business
                        li
                            a(href="#") Give
                                i.material-icons.red-text.lighten-1 loyalty

                div.col.l9.s12
                    block content

        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js")
        script(src="js/materialize/materialize.min.js")
        script.
            $(document).ready(function(){
                $('.button-collapse').sideNav();
                $('.carousel.carousel-slider').carousel({full_width: true});
            });